
<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
      
<div class="container">

    <div class="row mt-3">
        <div class="col-md-12">
            <%- include('../partials/flashMessages') -%>
        </div>
    </div>

    <% chunk.forEach(function (events){%>
        <div class="row mt-3">
            <% events.forEach(function (event){%>
                <div class="col-sm-6 col-md-4">
                    <div class="card mb-3">
                        <div class="card-header">
                            Featured
                        </div>
                        <div class="card-body">
                            <h5 class="card-title"><%=event.title%></h5>
                            <p class="card-text"><%=event.discription%></p>
                            <p class="card-text"><%=event.location%></p>
                            <a href="<%= '/events/show/' + event.id %>" class="btn btn-primary">Show More</a>
                        </div>
                    </div>      
                </div>
            <%})%>
        </div>
    <%})%>
    <div class="row">
        <div class="col-12 mt-2 mb-4">
            <nav aria-label="...">
                <ul class="pagination pagination-lg justify-content-center">
                    <% for (var i=1 ; i <= Math.ceil(total/5); i++) {%>

                        <% if (pageNo == i) {%>
                            <li class="page-item active"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
                        <%} else{%>
                            <li class="page-item"><a class="page-link" href="<%= '/events/' + i%>"><%= i%></a></li>
                        <%}%>
                    <%}%>
                </ul>
            </nav>
        </div>
    </div>
    

        

        

    
</div>   
<%- include('../partials/footer') -%>

